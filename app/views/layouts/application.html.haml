!!! 5
%html
  %head
    = display_meta_tags charaset: 'utf-8'
    - title = 'Pocket Porter あとで読むサービスPocketの未読記事を毎日メールでお届け'
    - description = '「あとで読む」はずだったPocketの中身を毎日メールでお届けします'
    - url = 'http://pocketporter.kumonos.jp'
    %title= title
    = display_meta_tags viewport: 'width=device-width,initial-scale=1.0',
        description: description,
        fb: {app_id: '1548893725364773'},
        og: {type: 'website',
          title: title,
          description: description,
          site_name: 'Pocket Porter',
          url: url,
          image: url + asset_path('logo.png')}
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
  %body
    #fb-root
    :javascript
      (function(d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/ja_JP/sdk.js#xfbml=1&appId=1548893725364773&version=v2.0";
        fjs.parentNode.insertBefore(js, fjs);
      }(document, 'script', 'facebook-jssdk'));
    #header
      #header_in
        %a{href: '/'}
          = image_tag 'logo.png', id: 'logo', alt: 'Pocket Porter', width: '251', height: '41'
        - if @user
          %a#logout{href: '/session/destroy'} ログアウト
    #content
      = yield
    #footer
      = "© #{link_to 'kumonos', 'http://kumonos.jp', target: '_blank'} all rights reserved.".html_safe
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
